          </div>
          <div class="col-sm-12">
            <div class="col-sm-3 form-group">
              <%= f.label :admission_date %>
            </div>
            <div class="col-sm-9 form-group">
              <%= f.text_field :admission_date, class: "form-control datepicker" %>
            </div>
          </div>
          <div class="actions">
            <%= f.submit %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

